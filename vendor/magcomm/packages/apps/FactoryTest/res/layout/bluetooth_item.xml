<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="horizontal"
    android:padding="@dimen/dp_1">

    <TextView
        android:id="@+id/tv_bt_name"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ll_bt_info"
        android:layout_alignTop="@+id/ll_bt_info"
        android:layout_marginRight="@dimen/dp_1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_3"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        app:layout_widthPercent="40%p" />

    <LinearLayout
        android:id="@+id/ll_bt_info"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_bt_name"
        android:orientation="vertical"
        app:layout_widthPercent="60%p">

        <TextView
            android:id="@+id/tv_bt_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_3"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:id="@+id/tv_bt_rssi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_3"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_16" />
    </LinearLayout>
</android.support.percent.PercentRelativeLayout>