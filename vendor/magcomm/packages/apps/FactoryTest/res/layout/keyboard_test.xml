<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingHorizontal="@dimen/dp_8"
    android:paddingTop="@dimen/px_100">

    <TextView
        android:id="@+id/keyboard_test_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/keyboard_test_title"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_24" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_keyboard_keys"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/keyboard_test_title"
        android:layout_marginTop="@dimen/dp_8"></LinearLayout>

</RelativeLayout>