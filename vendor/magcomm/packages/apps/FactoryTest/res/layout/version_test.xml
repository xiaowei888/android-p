	        android:id="@+id/tv_model"
	        style="@style/version_item" />

	    <TextView
	        android:id="@+id/tv_software_version"
	        style="@style/version_item" />

	    <TextView
	        android:id="@+id/tv_hardware_version"
	        style="@style/version_item" />

	    <TextView
	        android:id="@+id/tv_baseband_version"
	        style="@style/version_item" />

	    <TextView
	        android:id="@+id/tv_sn_version"
	        style="@style/version_item" />

	    <TextView
	        android:id="@+id/tv_wcdma_bt"
	        style="@style/version_item" />

	    <TextView
	        android:id="@+id/tv_wcdma_ft"
	        style="@style/version_item" />

	    <TextView
	        android:id="@+id/tv_gsm_bt"
	        style="@style/version_item" />

	    <TextView
	        android:id="@+id/tv_gsm_ft"
	        style="@style/version_item" />

	    <TextView
	        android:id="@+id/tv_imei1"
	        style="@style/version_item" />

	    <TextView
	        android:id="@+id/tv_imei2"
	        style="@style/version_item" />

	    <TextView
	        android:id="@+id/tv_meid"
	        style="@style/version_item" />

	    <TextView
