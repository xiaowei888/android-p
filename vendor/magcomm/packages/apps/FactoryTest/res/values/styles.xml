<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseActivityTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="main_button_style">
        <item name="android:textAllCaps">false</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/btn_normal_bg</item>
    </style>

    <style name="result_button">
        <item name="android:layout_margin">@dimen/dp_3</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/sp_24</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_normal_bg</item>
    </style>

    <style name="popup_window">
        <item name="android:textSize">@dimen/sp_10</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/dp_0</item>
    </style>

    <style name="charge_item">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="version_item">
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="radio_button">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:checked">false</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
</resources>
