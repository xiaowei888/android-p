<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:paddingBottom="20dp"
    android:gravity="center">
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/g_sensor"
       android:textSize="20dp"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="30dp"
       android:layout_marginBottom="20dp"
       android:gravity="center"
       android:orientation="horizontal">
      <TextView
          android:id="@+id/x_point"
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:textSize="14dp"
          android:textStyle="bold"/>
      <TextView
          android:id="@+id/y_point"
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:textSize="14dp"
          android:textStyle="bold"/>
      <TextView
          android:id="@+id/z_point"
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:textSize="14dp"
          android:textStyle="bold" />
   </LinearLayout>
   <FrameLayout
       android:layout_width="wrap_content"
       android:layout_height="0dp"
       android:layout_weight="1">
      <com.magcomm.settingtools.sensorsettings.GravityAnimView
          android:id="@+id/gravity_View"
          android:layout_width="300dp"
          android:layout_height="300dp"
          android:layout_gravity="center"/>
   </FrameLayout>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
	   android:textSize="12dp"
       android:text="@string/calibration_note"/>
   <LinearLayout
       android:layout_marginTop="20dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:gravity="center">
      <Button
          android:id="@+id/calibration"
          android:layout_width="120dp"
          android:layout_height="50dp"
          android:layout_marginRight="20dp"
		  android:textSize="14dp"
          android:theme="@style/ButtonTheme"
          android:text="@string/calibration"/>
      <Button
          android:id="@+id/reset"
          android:layout_width="120dp"
          android:layout_height="50dp"
          android:layout_marginLeft="20dp"
		  android:textSize="14dp"
          android:theme="@style/ButtonTheme"
          android:text="@string/reset"/>
   </LinearLayout>
</LinearLayout>
